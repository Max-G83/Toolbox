= inside_layout 'application' do
  - if session[:logged_in].present?
    = render :partial => 'logged_in'
  - else
    = form_tag '/apps/login' do
      Vending website login
      = text_field_tag :username, nil, :placeholder => 'username'
      = text_field_tag :password, nil, :placeholder => 'password'
      = submit_tag 'Login'
      %p

  = yield :app_body
